{% extends "::layout.html.twig" %}
{% block title %}
    {{ parent() }} 
    Mes annonces
{% endblock %}

{% block header %}
    {{ parent() }}

    
{% endblock %}


{% block body %}  

	<!-- Mobiles -->
	<div class="total-ads main-grid-border">
		<div class="container">
				<div class="clearfix"></div>
                    {% if list_ad|length > 0 %}
                        <div class="sun-regions col-md-9">
                        </div>
			<div class="select-box">
                            <div class="clearfix"></div>
                            <h4 class="head-top">Mes annonces</h4>
                            <div class="clearfix"></div>
                            <!--div class="header-right">
                            <a class="account" href="{#{ path('bo_occasion_add') }#}">Ajouter une annonce</a>
                            </div-->
			</div>
<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
	<div class="row">    
        <div class="col-md-12">
            <div class="table-responsive">    
              <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                        <!--th></th-->
                        <th width="15%" style="color:black;">Titre</th>
                        <th width="30%" style="color:black;">Description</th>
                        <th  class="caseC" style="color:black;">Publier</th>
                        <th  width="8%"  class="caseC" style="color:black;">Prix</th>
                        <th class="caseC" style="color:black;">Etat</th>
                        <th   width="15%" class="caseC" style="color:black;">Catégorie</th>
                        <th  width="10%" class="caseC" style="color:black;">Date publication</th>
                        <th width="5%" class="caseC" style="color:black;">Modifier</th>
                        <th width="8%" class="caseC" style="color:black;">Effacer</th>
                    </thead>
    <tbody>
    {% for ad in list_ad %}
        <tr align="center">
            <!--td><input type="checkbox" class="checkthis" /></td-->
                    <td width="15%" class="caseL"><a href="show/{{ ad.id }}">{{ ad.title }}</a> </td>
                    <td width="30%" class="caseL">{{ ad.content }}</td> 
                    <td  class="caseC">{% if ad.published==1 %}OUI
                        {%else%} NON {% endif%} </td>
                    <td  width="8%"  class="caseC">{{ ad.price }} DT</td>
                    <td class="caseC">{{ ad.state }}</td> 
                    <td class="caseC">{{ ad.category.name }}</td>
                    <td  width="15%" class="caseC">{%if "now"|date('d/m/Y')  == ad.datecreate|date('d/m/Y') %}Aujourdhui, {{ ad.datecreate|date("H:i") }}
                    {%else%} {{ ad.datecreate|date("d/m/Y  H:i") }} {% endif %} </td>
                    <td width="5%" class="caseC"><a href="{{ path('bo_occasion_edit', {'id':ad.id})}}">
                                   <p data-placement="top" data-toggle="tooltip" title="Edit">
                                   <button class="btn btn-info btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                                   <span class="glyphicon glyphicon-edit"></span>
                                   </button></p>
                                   </a>
                    </td>
                    <td width="8%" class="caseC"><a href="{{ path('bo_occasion_delete', {'id':ad.id})}}">
                                   <p data-placement="top" data-toggle="tooltip" title="Delete">
                                   <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
                                   <span class="glyphicon glyphicon-trash"></span>
                                   </button></p>
                                   </a>
                    </td>
        </tr>                            
    {% endfor %}
    </tbody>
        
</table>

<div class="clearfix"></div>
                        <!--pagination-->
			<!--ul class="pagination pagination-sm">
                              {#% for p in range(1, nbPages) %}
                                <li{% if p == page %} class="active"{% endif %}>
                                  <a href="{{ path('bo_occasion_mylist',{'id':ad.id} ,{'page': p}) }}">{{ p }}</a>
                                </li>
                              {% endfor %#}
                        </ul-->
                
            </div>
            
        </div>
	</div>

                                
<!--*******************************************************************************-->                        
				<div class="clearfix"></div>
                {% else %}            
                        <div class="alert alert-danger" role="alert">
                        <strong>Oh !</strong> Pas d'annonces trouvées.
                        </div>             
                {% endif %}                                 
                                
			</div>
		</div>	
 	
	<!-- // Mobiles -->  

{% endblock %}